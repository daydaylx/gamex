# Intimacy Tool - Environment Configuration Example
# Copy this file to .env and customize as needed

# ============================================
# ENCRYPTION SETTINGS (SECURITY)
# ============================================

# Force encryption for all new sessions (RECOMMENDED for production)
# When enabled, sessions without a password will be rejected
# Default: false (for backward compatibility)
FORCE_ENCRYPTION=false

# Warn when creating unencrypted sessions
# Logs a warning when a session is created without encryption
# Default: true
WARN_UNENCRYPTED=true

# ============================================
# DATABASE
# ============================================

# Custom database path (optional)
# If not set, uses default location: ~/.local/share/intimacy-tool/intimacy_tool.sqlite3
# INTIMACY_TOOL_DB=/path/to/custom/database.sqlite3

# ============================================
# DEVELOPMENT
# ============================================

# Enable debug mode (for development only)
# DEBUG=false

# ============================================
# PRODUCTION RECOMMENDATIONS
# ============================================

# For production deployments, use:
# FORCE_ENCRYPTION=true
# WARN_UNENCRYPTED=true

# This ensures all new sessions are encrypted and sensitive data is protected.
# Existing unencrypted sessions will continue to work, but new ones require a password.
